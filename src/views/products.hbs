<h1>Bienvenido {{userData.email}} a nuestros productos! ðŸ˜Ž</h1>

{{#if products.length}}
  <section class="productsContainer">
    {{#each products}}
      <div class="productsCard">
        <h3>Nombre: {{title}}</h3>
        <h4>Descripcion: {{description}}</h4>
        <h4>Precio: {{price}}</h4>
        <img src="{{thumbnail}}" />
        <div class="buttons">
          <button
            onclick="deleteProduct({{_id}})"
            class="minusButton"
          >-</button>
          <button onclick="deleteProduct({{_id}})" class="plusButton">+</button>
        </div>
      </div>
    {{/each}}
  </section>
{{else}}
